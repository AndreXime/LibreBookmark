{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@tools/*": ["./src/tools/*"],
			"@components/*": ["./src/components/*"],
			"@language/*": ["./src/language/*"]
		},
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"tailwind.config.js",
		"postcss.config.js",
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/**/**/*.tsx"
	],
	"exclude": ["node_modules"]
}
